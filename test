-- Create the GUI
local Gui = script.Parent.Frame

-- Set the Background Color of the GUI
Gui.BackgroundColor3 = Color3.fromRGB(255, 255, 255)

-- Set the Border Radius of the GUI to create rounded corners
Gui.Rounded = true
Gui.Rounding = 4

-- Minimize Button
local Minimize = Gui.Minimize
Minimize.MouseButton1Click:Connect(function()
    -- Animate the GUI to reduce its size
    local Tween = TweenService:Create(Gui, TweenInfo.new(0.5), {Size = UDim2.new(1, 0, 0, 30)})
    Tween:Play()
end)

-- Maximize Button
local Maximize = Gui.Maximize
Maximize.MouseButton1Click:Connect(function()
    -- Animate the GUI to increase its size
    local Tween = TweenService:Create(Gui, TweenInfo.new(0.5), {Size = UDim2.new(1, 0, 1, -30)})
    Tween:Play()
end)

-- Close Button
local Close = Gui.Close
Close.MouseButton1Click:Connect(function()
    -- Animate the GUI to fade out and then destroy it
    local Tween = TweenService:Create(Gui, TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {BackgroundTransparency = 1})
    Tween.Completed:Connect(function()
        Gui:Destroy()
    end)
    Tween:Play()
end)
